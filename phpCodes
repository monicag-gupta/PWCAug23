








<html> <body> 
    <?php
        $counter=-9;
        for (;$counter<10;$counter++){
            //check for division by zero
            if ($counter==-3){
                echo "Skipping to avoid division by -3.<br>";
                continue;
            }
            if ($counter == 0){
                echo "Stopping to avoid division by zero.";
                break;
            }
            // if($counter == -6)
            // {
            //     echo "Exiting at -6";
            //     exit;
            // }
            echo "100/$counter :",100/$counter,"<br />";
        }
        echo "<br><br>Php ends";
    ?> 
</body> </html>











<html> <body> 
    <h1>In JS: </h1>
    <p id="a"></p>
    <script>
        const arr = new Array("BMW", "Volvo", "Saab", "Ford");
        var s="<h2>For in loop: </h2>";
        for(let i in arr){
            s += "arr[i]: " + arr[i] + "<Br>";
        }
        s+="<h2>For as loop: </h2>";
        for(let j of arr){
            s += "j: " + j + "<Br>";
        }
        document.getElementById("a").innerHTML = s;
    </script>
    <hr>
    <h1>In PHP: </h1>
    <?php 
    $arr=array("one", "two", "three"); 
    foreach ($arr as $value) { 
        echo "Value: " . $value . "<br />"; 
    } 
    ?> 
</body> </html>













<html>  
	<head>  
		<title>Let us count !!!</title>
	</head>
 	<body>
        <h1>While loop</h1>
		<?php
			$limit = 5;
			echo "<h2> Let us count from 1 to $limit </h2><br />";
			$count = 1;
			while ($count <= $limit)
			{
				echo "counting $count of $limit <br>";
				$count++;
			}
		?>
        <hr>
        <h1>do..While loop</h1>

        <?php 
			$i=0; 
			do { 
				$i++; 
				echo "The number is " . $i . "<br />"; 
			} 
			while ($i<5); 
		?> 
        <hr>
        <h1>for loop</h1>


        <?php 
          for ($i=1; $i<=5; $i++) 
          { 
	        echo "Hello World!: $i times!<br />"; 
          } 
      ?> 


    </body>
<html>








