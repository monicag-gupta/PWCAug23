<html> <body> 
<?php
	$theDate = date("m/d/y"); 
	echo "Today's date is: $theDate";
?>
<hr>
<?php
	$b = time (); 
	print date("m/d/y",$b) . "<br />"; 
	print date("D, F jS",$b) . "<br />"; 
	print date("l, F jS Y",$b) . "<br />"; 
	print date("g:i A",$b) . "<br />"; 
	print date("r",$b) . "<br />"; 
	print date("g:i:s A D, F jS Y",$b) . "<br />"; 
?>

 </body> </html>











