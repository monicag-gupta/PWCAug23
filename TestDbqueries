CREATE or alter PROCEDURE SelectCustomerstabledata 
(@agemin Int, @agemax Int, @rownum int output)
AS 
Begin
    SELECT * FROM Customers where age between @agemin and @agemax;
     select @rownum= @@ROWCOUNT;
End

