<html>    
  <body onload="fnLoad();" onunload="fnUnload();">  
    <h1> load, unload</h1>
  <script>
    function fnLoad(){
      alert("site loaded!");
    }
    function fnUnload(){
      alert("Are you sure you wanna leave my site?");
    }
    </script>
        <hr>
        <br>
        <br>
  </body>
</html>
